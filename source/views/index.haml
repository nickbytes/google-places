!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}

    %title Google Places API
    %link{href: "assets/stylesheets/application.css", rel: "stylesheet", type: "text/css"}
    %script{src: "https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=places", type: "text/javascript"}

  %body
    %section.search
      %h1.sentence
        I'm looking for a
      %input.place__type{:placeholder => 'cafe, park, etc'}

      %h1.sentence
        in
      %input.place__location{:placeholder => 'San Francisco'}

      %button.place__search Search

      .place__results
        %h3.section__title Results & Ratings
        %ul.places__ul
    
    %div#map-canvas



    %script{src: "https://code.jquery.com/jquery-2.1.1.min.js", type: "text/javascript"}
    %script{src: "assets/javascripts/application.js", type: "text/javascript"}
